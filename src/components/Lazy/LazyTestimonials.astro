---
/**
 * Lazy-loaded Testimonials Component
 *
 * This component is prerendered and lazy-loaded when scrolled into view.
 * Perfect for content that's typically below the fold.
 */
const testimonials = [
    {
        name: "Sarah Chen",
        role: "Senior Developer",
        company: "TechCorp",
        avatar: "üë©‚Äçüíª",
        quote: "The lazy loading plugin transformed our site's performance. Initial load time dropped by 40%!",
        rating: 5,
    },
    {
        name: "Marcus Johnson",
        role: "Frontend Lead",
        company: "StartupXYZ",
        avatar: "üë®‚ÄçüöÄ",
        quote: "Incredibly easy to integrate with our existing Astro project. The prerendering just works.",
        rating: 5,
    },
    {
        name: "Elena Rodriguez",
        role: "Tech Architect",
        company: "DevStudio",
        avatar: "üßë‚Äçüíº",
        quote: "The CSS tree-shaking for lazy components is a game-changer. Highly recommended!",
        rating: 5,
    },
];

function renderStars(count: number) {
    return "‚òÖ".repeat(count) + "‚òÜ".repeat(5 - count);
}
---

<section class="testimonials-section">
    <div class="section-container">
        <div class="section-header">
            <span class="section-label">What Developers Say about this</span>
            <h2 class="section-title">Trusted by Teams Worldwide</h2>
            <p class="section-subtitle">
                See why developers love using our lazy loading solution
            </p>
        </div>

        <div class="testimonials-grid">
            {
                testimonials.map((testimonial) => {
                    return (
                        <article class="testimonial-card">
                            <div class="testimonial-rating">
                                {renderStars(testimonial.rating)}
                            </div>
                            <blockquote class="testimonial-quote">
                                "{testimonial.quote}"
                            </blockquote>
                            <div class="testimonial-author">
                                <div class="author-avatar">
                                    {testimonial.avatar}
                                </div>
                                <div class="author-info">
                                    <strong class="author-name">
                                        {testimonial.name}
                                    </strong>
                                    <span class="author-role">
                                        {testimonial.role} at{" "}
                                        {testimonial.company}
                                    </span>
                                </div>
                            </div>
                        </article>
                    );
                })
            }
        </div>

        <div class="load-indicator">
            <span class="indicator-dot"></span>
            <span class="indicator-text">This section was lazy loaded!</span>
            <span class="indicator-dot"></span>
        </div>
    </div>
</section>

<style>
    .testimonials-section {
        background: linear-gradient(180deg, #0f0f1a 0%, #0a0a14 100%);
        padding: 6rem 2rem;
        font-family:
            "Inter",
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            sans-serif;
        color: #fff;
    }

    .section-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-header {
        text-align: center;
        max-width: 600px;
        margin: 0 auto 4rem;
    }

    .section-label {
        display: inline-block;
        background: linear-gradient(
            135deg,
            rgba(102, 126, 234, 0.2) 0%,
            rgba(118, 75, 162, 0.2) 100%
        );
        border: 1px solid rgba(102, 126, 234, 0.3);
        color: #8b9cff;
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #fff;
        margin: 0 0 1rem;
        line-height: 1.2;
    }

    .section-subtitle {
        color: #888;
        font-size: 1.125rem;
        line-height: 1.6;
        margin: 0;
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
    }

    .testimonial-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 1.25rem;
        padding: 2rem;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .testimonial-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(102, 126, 234, 0.3);
        transform: translateY(-4px);
    }

    .testimonial-rating {
        color: #fbbf24;
        font-size: 1.25rem;
        letter-spacing: 0.15em;
    }

    .testimonial-quote {
        font-size: 1.05rem;
        line-height: 1.7;
        color: #c8c8d8;
        font-style: italic;
        flex-grow: 1;
        margin: 0;
    }

    .testimonial-author {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding-top: 1.25rem;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
    }

    .author-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .author-info {
        display: flex;
        flex-direction: column;
    }

    .author-name {
        color: #fff;
        font-weight: 600;
    }

    .author-role {
        color: #666;
        font-size: 0.875rem;
    }

    .load-indicator {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 4rem;
        padding: 1rem 1.5rem;
        background: rgba(102, 126, 234, 0.1);
        border: 1px solid rgba(102, 126, 234, 0.2);
        border-radius: 2rem;
        max-width: fit-content;
        margin-left: auto;
        margin-right: auto;
    }

    .indicator-text {
        color: #8b9cff;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .indicator-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        animation: blink 1.5s ease-in-out infinite;
    }

    .indicator-dot:last-child {
        animation-delay: 0.3s;
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.3;
        }
    }
</style>
